<?xml version="1.0"?>
<object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
        cookie_persistence="False" default_skin="Plone Default"
        request_varname="plone_skin">

  <!-- bes templates -->
  <object name="bes_templates" meta_type="Filesystem Directory View"
          directory="bes.lims:skins/bes_templates"/>

  <skin-path name="*">
    <layer name="bes_templates" insert-after="custom"/>
  </skin-path>

</object>
